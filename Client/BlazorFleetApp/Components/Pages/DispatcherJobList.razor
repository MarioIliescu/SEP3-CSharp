@page "/dispatcher-job-list"
@using ApiContracts.Dtos.Job
@using ApiContracts.Enums
@using BlazorFleetApp.Services.Events
@using BlazorFleetApp.Services.Job
@using BlazorFleetApp.Services.Hubs
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@implements IAsyncDisposable
@inject IJobService JobService
@inject FleetHubClient FleetHub

@attribute [Authorize]

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            @if (!string.IsNullOrWhiteSpace(message))
            {
                <p class="text-danger">@message</p>
            }

            @if (jobs.Count == 0)
            {
                <p>No jobs found.</p>
            }
            else
            {
                <h1>Active jobs</h1>
                <ul class="list-group">
                    @foreach (var job in jobs)
                    {
                        <JobComponent InitialJob="job"
                                      InitialDispatcherId="dispatcherId"/>
                    }
                </ul>
            }
        </div>

        <div class="col-12">
            @if (completedJobs.Count == 0)
            {
                <p>No completed jobs found.</p>
            }
            else
            {
                <h1>Completed jobs</h1>
                <ul class="list-group">
                    @foreach (var job in completedJobs)
                    {
                        <JobComponent InitialJob="job"
                                      InitialDispatcherId="dispatcherId"/>
                    }
                </ul>
            }
        </div>

        <div class="col-12">
            @if (expiredJobs.Count == 0)
            {
                <p>No expired jobs found.</p>
            }
            else
            {
                <h1>Expired jobs</h1>
                <ul class="list-group">
                    @foreach (var job in expiredJobs)
                    {
                        <JobComponent InitialJob="job"
                                      InitialDispatcherId="dispatcherId"/>
                    }
                </ul>
            }
        </div>
    </div>
</div>

@code {
    [CascadingParameter] public Task<AuthenticationState> State { get; set; }

    private List<JobDto> jobs = new();
    private List<JobDto> expiredJobs = new();
    private List<JobDto> completedJobs = new();

    private int dispatcherId = 0;
    private string message = "";
    private bool _disposed;

    protected override async Task OnInitializedAsync()
    {
        var authState = await State;
        var user = authState.User;

        if (user.Identity?.IsAuthenticated ?? false)
        {
            dispatcherId = int.Parse(user.Claims.First(c => c.Type == "Id").Value);
            await LoadAllJobsAsync();

            // Start FleetHubClient
            await FleetHub.StartAsync();

            // Subscribe to fleet events
            FleetHub.OnFleetEvent -= HandleFleetEvent;
            FleetHub.OnFleetEvent += HandleFleetEvent;

            if (dispatcherId != 0)
                await FleetHub.JoinGroupAsync(dispatcherId.ToString());
        }
    }

    private async Task LoadAllJobsAsync()
    {
        await LoadActiveJobsAsync();
        await LoadCompletedJobsAsync();
        await LoadExpiredJobsAsync();
        await InvokeAsync(StateHasChanged);
    }

    private async Task LoadActiveJobsAsync()
    {
        try
        {
            var allJobs = await JobService.GetAllAsync();
            jobs = allJobs
                .Where(j =>
                    j.DispatcherId == dispatcherId &&
                    j.CurrentStatus is JobStatus.Available or JobStatus.Ongoing or JobStatus.Assigned or JobStatus.Accepted or JobStatus.Loading or JobStatus.Unloading
                )
                .ToList();

            message = "";
        }
        catch (Exception ex)
        {
            message = "Error loading jobs: " + ex.Message;
        }
    }

    private async Task LoadCompletedJobsAsync()
    {
        try
        {
            var allJobs = await JobService.GetAllAsync();
            completedJobs = allJobs
                .Where(j => j.DispatcherId == dispatcherId && j.CurrentStatus == JobStatus.Completed)
                .ToList();
        }
        catch (Exception ex)
        {
            message = "Error loading completed jobs: " + ex.Message;
        }
    }

    private async Task LoadExpiredJobsAsync()
    {
        try
        {
            var allJobs = await JobService.GetAllAsync();
            expiredJobs = allJobs
                .Where(j => j.DispatcherId == dispatcherId && j.CurrentStatus == JobStatus.Expired)
                .ToList();
        }
        catch (Exception ex)
        {
            message = "Error loading expired jobs: " + ex.Message;
        }
    }

    private async Task HandleFleetEvent(FleetEventType evt)
    {
        if (_disposed) return;

        if (evt is FleetEventType.JobsUpdated or FleetEventType.JobAssigned or FleetEventType.JobStatusChanged)
        {
            await LoadAllJobsAsync();
        }
    }

    public async ValueTask DisposeAsync()
    {
        _disposed = true;
        FleetHub.OnFleetEvent -= HandleFleetEvent;

        if (dispatcherId != 0)
            await FleetHub.LeaveGroupAsync(dispatcherId.ToString());
    }
}
