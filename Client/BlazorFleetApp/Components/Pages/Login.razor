@page "/login"
@using System.Security.Claims
@using ApiContracts.Enums
@using BlazorFleetApp.Components.Layout
@using BlazorFleetApp.Services.Auth
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.SignalR.Client
@layout LoginRegisterLayout
@inject NavigationManager NavMgr
@inject IAuthService AuthService
@rendermode InteractiveServer

<link rel="stylesheet" href="css/loginStyle.css">

<AuthorizeView>
    <Authorized>
        <h2>Resting spot for authorized users</h2>
    </Authorized>
    <NotAuthorized>
        <div class="logo-container">
            <img src="images/logo-03.png" alt="logo">
        </div>

        <h2 id="catch-phrase">BACK ON THE ROAD?!</h2>

        <div class="login-part">
            <input type="text" id="email-field" name="email-field" placeholder="Email" @bind="email"> <br>
            <div class="password-wrapper">
                <input type="@passwordFieldType" id="password-field" name="password-field" placeholder="Password" @bind="password">
                <img class="show-password-vector" src="images/ShowPasswordVector.png" @onclick="ToggleFieldType"/>
            </div>
            <a href="" @onclick="GoToForgotPassword">Forgot password?</a>
            <p id="error-message-popup">@_errorMessage</p>
            <input type="button" id="login-button" name="login-button" value="Log in" @onclick="LoginAsync">
            <p>Don't have an account? <a href="" @onclick="GoToRegister">Create account</a> </p>
        </div>
    </NotAuthorized>
</AuthorizeView>


@code {
    [CascadingParameter] public Task<AuthenticationState> State { get; set; }
    private HubConnection? hubConnection;
    private string passwordFieldType = "password";
    private string? email;
    private string? password;
    private string? role;
    private string _errorMessage = "";

    private void GoToRegister() => NavMgr.NavigateTo("select-role");
    private void GoToForgotPassword() => NavMgr.NavigateTo("forgot_password");

    private async Task LoginAsync()
    {
        _errorMessage = "";
        try
        {
            await AuthService.LoginAsync(email, password);
            var authState = await State;
            var user = authState.User;

            role = user.Claims.FirstOrDefault(c => c.Type == ClaimTypes.Role || c.Type == "Role" || c.Type == "role")?.Value;
            await SetupHubAsync(role);
            NavigateByRole();
        }
        catch (Exception e)
        {
            Console.WriteLine(e);
            _errorMessage = $"Error: {e.Message}";
        }
    }
    private async Task SetupHubAsync(string? role)
    {
        hubConnection = new HubConnectionBuilder()
            .WithUrl(NavMgr.ToAbsoluteUri("/fleethub"))
            .WithAutomaticReconnect()
            .Build();

        await hubConnection.StartAsync();
        await hubConnection.InvokeAsync("JoinGroup", "allclients");

        if (!string.IsNullOrEmpty(role))
        {
            await hubConnection.InvokeAsync("JoinGroup", role.ToLower());
        }
    }


    private void NavigateByRole()
    {
        switch (role)
        {
            case "Dispatcher":
                 NavMgr.NavigateTo("/my-drivers");
                break;
               case "Driver":
                 NavMgr.NavigateTo("/drivers-job");
                break;
            default:
                InvokeAsync(() => NavMgr.NavigateTo("/home")); 
                break;
        }
    }
    private async Task LoadUserRoleAsync()
    {
        var authState = await State;
        var user = authState.User;

        if (user.Identity?.IsAuthenticated == true)
        {
            email = user.Claims.FirstOrDefault(c => c.Type == ClaimTypes.Email || c.Type == "Email")?.Value;

            // Get the role claim as string
            role = user.Claims.FirstOrDefault(c => c.Type == ClaimTypes.Role || c.Type == "Role" || c.Type == "role")?.Value;

            if (string.IsNullOrEmpty(role))
            {
                _errorMessage = "Role claim missing.";
            }
        }
        else
        {
            _errorMessage = "User not authenticated.";
        }
    }
    
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            var authState = await State;
            var user = authState.User;

            if (user.Identity?.IsAuthenticated == true)
            {
                // Get email if needed
                email = user.Claims.FirstOrDefault(c => c.Type == ClaimTypes.Email || c.Type == "Email")?.Value;

                // Get role as string
                role = user.Claims.FirstOrDefault(c => c.Type == ClaimTypes.Role || c.Type == "Role" || c.Type == "role")?.Value;

                if (!string.IsNullOrEmpty(role))
                {
                    // Navigate immediately based on role
                    NavigateByRole();
                }
                else
                {
                    _errorMessage = "Role claim missing for logged-in user.";
                }
            }
        }
    }

    public void ToggleFieldType()
    {
        passwordFieldType = passwordFieldType == "password" ? "text" : "password";
    }
}