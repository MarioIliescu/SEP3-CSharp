@page "/recruit-driver"
@using ApiContracts.Dtos.Driver
@using ApiContracts.Dtos.Job
@using ApiContracts.Enums
@using BlazorFleetApp.Services.Events
@using BlazorFleetApp.Services.Job
@using BlazorFleetApp.Services.Hubs
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@using Services.RecruitDriver
@inject IRecruitService RecruitService
@inject IJobService JobService
@inject FleetHubClient FleetHub
@attribute [Authorize]

@if (isLoading)
{
    <p>Loading...</p>
}
else if (drivers == null || !drivers.Any())
{
    <p>No drivers available.</p>
}
else
{
    @foreach (var driver in drivers)
    {
        var currentJob = jobs.FirstOrDefault(j => j.DriverId == driver.Id && j.CurrentStatus is not (JobStatus.Available or JobStatus.Expired));

        <DriverComponent InitialDriverId="driver.Id" InitialDispatcherId="id">
            <Component>
                <RecruitComponent InitialDriver="driver" InitialDispatcherId="id"></RecruitComponent>
            </Component>
        </DriverComponent>
    }
}

@code {
    private List<DriverDto>? drivers;
    private List<JobDto> jobs = new();
    private bool isLoading;
    private int id;
    private bool _disposed;

    [CascadingParameter] public Task<AuthenticationState> State { get; set; }

    protected override async Task OnInitializedAsync()
    {
        var authState = await State;
        var user = authState.User;

        if (user?.Identity?.IsAuthenticated ?? false)
        {
            id = int.Parse(user.Claims.FirstOrDefault(c => c.Type == "Id")?.Value ?? "0");
        }

        await LoadAllDataAsync();

        // Start FleetHub and subscribe to events
        await FleetHub.StartAsync();
        FleetHub.OnFleetEvent -= HandleFleetEvent;
        FleetHub.OnFleetEvent += HandleFleetEvent;

        if (id != 0)
            await FleetHub.JoinGroupAsync(id.ToString());
    }

    private async Task LoadAllDataAsync()
    {
        await LoadJobsAsync();
        await LoadDriversAsync();
    }

    private async Task LoadJobsAsync()
    {
        var allJobs = await JobService.GetAllAsync();

        // Only jobs that are currently assigned to drivers
        jobs = allJobs
            .Where(j => j.CurrentStatus is not (JobStatus.Available or JobStatus.Expired))
            .ToList();

        if (!_disposed)
            await InvokeAsync(StateHasChanged);
    }

    private async Task LoadDriversAsync()
    {
        isLoading = true;
        await InvokeAsync(StateHasChanged);

        drivers = await RecruitService.GetDrivers();

        isLoading = false;
        if (!_disposed)
            await InvokeAsync(StateHasChanged);
    }

    private async Task HandleFleetEvent(FleetEventType evt)
    {
        if (_disposed) return;

        if (evt is FleetEventType.DriversUpdated or FleetEventType.DriverStatusChanged)
            await LoadDriversAsync();

        if (evt is FleetEventType.JobsUpdated or FleetEventType.JobAssigned or FleetEventType.JobStatusChanged)
            await LoadJobsAsync();
    }

    public async ValueTask DisposeAsync()
    {
        _disposed = true;

        FleetHub.OnFleetEvent -= HandleFleetEvent;

        if (id != 0)
            await FleetHub.LeaveGroupAsync(id.ToString());
    }
}
